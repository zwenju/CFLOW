subroutine t3_triangle_area(t3, area)
!!$ ******************************************************************************0
!!$ the reference triangle             arbitrary triangle 
!!$         (3)                                (3)  
!!$          |\                               /  \
!!$          | \                             /    \
!!$          |  \                           /      \
!!$      (1) |___\(2)                   (1)/________\(2)
!!$
!!$ vertices: [ 0 1 0 ]                   [x1, x2, x3]  
!!$           [ 0 0 1 ]                   [y1, y2, y3] 
!!$ --------------------------------------------------------------------------0
!!$ | 1   1   1  | 
!!$ | x1  x2  x3 |  =  2 * triangle_area 
!!$ ! y1  y2  y3 |
!!$ --------------------------------------------------------------------------0
!!$ | 1   0      0     | 
!!$ | x1  x2-x1  x3-x1 |  =  2 * triangle_area 
!!$ ! y1  y2-y1  y3-y1 |
!!$
!******************************************************************************0
implicit none
real (kind=8), intent (in)  :: t3 (2, 3)
real (kind=8), intent (out) :: area
real (kind=8) :: B(2,2)
!!
!! compute B 
!!
  B(1:2, 1) = t3(1:2, 2) - t3(1:2, 1)
  B(1:2, 2) = t3(1:2, 3) - t3(1:2, 1)
!!
!! compute  det (B)
!!
  area = B(1,1)*B(2,2) - B(1,2) * B(2,1)
!!
!!  area  = 1/2 * det(B)
!!
  area = 0.50d0 * abs(area)


return 
end subroutine 
